<Window x:Class="BIMoQ.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Element Selection" Height="600" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <ComboBox x:Name="CategoryComboBox" Height="30" Margin="0,0,0,10" 
                      SelectionChanged="CategoryComboBox_SelectionChanged"/>
            <ComboBox x:Name="ElementTypeComboBox" Height="30" Margin="0,0,0,10"/>
            <Button Content="Analyze Elements" Height="30" Click="SelectElements_Click"/>
            <Button Content="Restart" Height="30" Margin="0,10,0,0" Click="Restart_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel>
                <TextBlock x:Name="SummaryBlock" TextWrapping="Wrap" Margin="0,0,0,10"/>
                <ListView x:Name="ElementListView" Height="300">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Element ID" Width="100"/>
                            <GridViewColumn Header="Volume (m³)" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
