<Window x:Class="BIMoQ.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Element Selection" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <ComboBox x:Name="CategoryComboBox" Height="30" Margin="0,0,0,10" 
                      SelectionChanged="CategoryComboBox_SelectionChanged"/>
            <ComboBox x:Name="ElementTypeComboBox" Height="30" Margin="0,0,0,10"/>
            <Button Content="Select Elements" Height="30" Click="SelectElements_Click"/>
            <Button Content="OK" Height="30" Margin="0,10,0,0" Click="OK_Click"/>
        </StackPanel>
    </Grid>
</Window>
